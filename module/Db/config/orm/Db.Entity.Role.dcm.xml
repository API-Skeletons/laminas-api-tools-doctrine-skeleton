<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\Role" table="groups">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="roleId" type="string" nullable="false" column="name"/>
    <field name="description" type="string" nullable="true"/>
    <many-to-one field="parent" target-entity="Db\Entity\Role">
      <join-columns>
        <join-column name="group_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="user" target-entity="Db\Entity\User" inversed-by="role">
      <join-table name="users_groups">
        <join-columns>
          <join-column name="group_id" referenced-column-name="id" nullable="false"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_id" referenced-column-name="id" nullable="false"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
